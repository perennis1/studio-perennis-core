{
  "name": "my-next-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "perennisbackend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=perennisbackend\" \"next dev\"",
    "build": "npm run build --workspaces --if-present && next build",
    "start": "next start",
    "lint": "eslint",
    "db:generate": "npm run generate --workspace=@studio-perennis/database",
    "db:migrate": "npm run migrate:dev --workspace=@studio-perennis/database",
    "db:push": "npm run db:push --workspace=@studio-perennis/database",
    "db:seed": "npm run db:seed --workspace=perennisbackend",
    "prepare-worker": "Copy-Item \"node_modules/react-pdf/node_modules/pdfjs-dist/build/pdf.worker.min.mjs\" \"public/pdf.worker.min.js\""
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@phosphor-icons/react": "^2.1.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tiptap/extension-color": "^3.11.0",
    "@tiptap/extension-highlight": "^3.11.0",
    "@tiptap/extension-image": "^3.11.0",
    "@tiptap/extension-link": "^3.11.0",
    "@tiptap/extension-placeholder": "^3.11.0",
    "@tiptap/extension-table": "^3.11.0",
    "@tiptap/extension-table-cell": "^3.11.0",
    "@tiptap/extension-table-header": "^3.11.0",
    "@tiptap/extension-table-row": "^3.11.0",
    "@tiptap/extension-text-align": "^3.11.0",
    "@tiptap/extension-text-style": "^3.11.0",
    "@tiptap/react": "^3.11.0",
    "@tiptap/starter-kit": "^3.11.0",
    "@types/pdfjs-dist": "^2.10.377",
    "autoprefixer": "^10.4.21",
    "axios": "^1.13.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "emoji-picker-react": "^4.16.1",
    "framer-motion": "^12.23.24",
    "gif-picker-react": "^1.5.0",
    "lucide-react": "^0.548.0",
    "next": "^16.0.1",
    "next-themes": "^0.4.6",
    "pdfjs-dist": "^4.10.38",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-easy-crop": "^5.5.6",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-pdf": "^9.2.1",
    "recharts": "^3.6.0",
    "swiper": "^12.0.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "tiptap-extension-resize-image": "^1.3.2",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.27",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "baseline-browser-mapping": "^2.9.7",
    "concurrently": "^8.2.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3"
  }
}
